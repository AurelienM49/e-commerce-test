{% extends 'base.html.twig' %}
{% block title %}EASY - Nos produits
{% endblock %}
{% block body %}
<div class="container-fluid" style="padding: 70px;">
  <div class="row">
    <div class="col-md-3">
      <h1>Filtrer</h1>
      {{ form(form) }}
      </div>
      <div class="col-md-9">
        <h1 class="title-produits" style="margin-bottom: 5px;">Nos produits</h1>
        <div class="row">
          {% for product in products %}
            <div class="col-md-3">
              <div class="wsk-cp-product">
                <div class="wsk-cp-img">
                  <img src=" {{asset('uploads/' ~ product.illustration)| imagine_filter('rectangle')}}" alt="{{ product.name }}" alt="Product" class="img-responsive"/>
                </div>
                <div class="wsk-cp-text">
                  <div class="category">
                    <span>Add</span>
                  </div>
                  <div class="title-product">
                    <h3>{{ product.name }}</h3>
                  </div>
                  <div class="description-prod">
                    <p>{{ product.subtitle }}</p>
                  </div>
                  <div class="card-footer">
                    <div class="wcf-left">
                      <span class="price">{{ (product.price / 100) |number_format(2, ',', '.') }} â‚¬</span>
                    </div>
                    <div class="wcf-right">
                      <a href="#" class="buy-btn">
                        <i data-feather="shopping-bag" class="img-shop-card" ></i></i>
                      </a>
                    </div>
                  </div>
                </div>
              </div>
            </div>

        
          {% endfor %}
        </div>
      </div>
    </div>
  </div>
	{% endblock %}

